def create_diamond(n):
  # For the upper half of the diamond
  for i in range(1, n+1):
    print(" " * (n-i), end="")
    for j in range(i):
      print(chr(65 + j),end=" ")
    print()
  # For the lower half of the diamond
  for i in range(n-1,0,-1):
    print(" " * (n-i), end ="")
    for j in range(i):
       print(chr(65 + j),end=" ")
    print()
